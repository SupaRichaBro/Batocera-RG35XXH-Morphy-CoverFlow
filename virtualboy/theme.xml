<theme>
	<formatVersion>7</formatVersion>
	<include>./../theme.xml</include>

	<view name="system">
		<image name="logo">
			<path>./_inc/system.png</path>
		</image>
	</view>

	<view name="system">
      <image name="system-background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>2</zIndex>                 
         <path>./_inc/virtualboymain.png</path>
      </image>
      
	 <video name="backgroundvideo" extra="true">
        <path>{random}</path>          
        <visible>true</visible>	 	 
        <rotation></rotation>  
        <roundCorners>0.00</roundCorners>             
        <pos>0.301 0.483</pos>
        <origin>0 0</origin>
        <size>0.185 0.150</size>
        <color>FFFFFF</color>
        <zIndex>1</zIndex>         
     </video>
	 <video name="backgroundvideo2" extra="true">
        <path>{random}</path>          
        <visible>true</visible>	 	 
        <rotation></rotation>  
        <roundCorners>0.00</roundCorners>             
        <pos>0.521 0.483</pos>
        <origin>0 0</origin>
        <size>0.185 0.150</size>
        <color>FFFFFF</color>
        <zIndex>1</zIndex>         
     </video>                  
	</view>

   <view name="detailed, video, gamecarousel, grid, basic">         
      <image name="background86" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <path>./_inc/virtualboyvideo.png</path>
         <maxSize>1 1</maxSize>
         <zIndex>2</zIndex>           
      </image>        
      
     <video name="md_video">
        <visible>true</visible>	 	 
        <rotation>0</rotation>             
        <pos>0.578 0.340</pos>
        <origin>0 0</origin>
        <size>0.242 0.195</size>
        <color>FFFFFF</color>
        <zIndex>1</zIndex>		             
      </video>                                                         
   </view> 

   <view name="basic">         
      <image name="background86" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <path>./_inc/virtualboybasic.png</path>
         <maxSize>1 1</maxSize>
         <zIndex>2</zIndex>           
      </image>                                                          
   </view> 


</theme>
