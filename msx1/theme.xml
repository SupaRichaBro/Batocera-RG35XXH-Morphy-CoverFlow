<theme>
	<formatVersion>7</formatVersion>
	<include>./../theme.xml</include>

	<view name="system">
		<image name="logo">
			<path>./_inc/system.png</path>
		</image>
	</view>

	<view name="system">
      <image name="system-background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>2</zIndex>                 
         <path>./_inc/msxmain.png</path>
      </image>
      
	 <video name="backgroundvideo" extra="true">
        <path>{random}</path>          
        <visible>true</visible>	 	 
        <rotation>0</rotation>  
        <roundCorners>0.00</roundCorners>             
        <pos>0.440 0.130</pos>
        <origin>0 0</origin>
        <size>0.418 0.401</size>
        <color>FFFFFF</color>
        <zIndex>1</zIndex>         
     </video>            
	</view>

   <view name="detailed, video, gamecarousel, grid, basic">         
      <image name="background86" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <path>./_inc/msxvideo.png</path>
         <maxSize>1 1</maxSize>
         <zIndex>2</zIndex>           
      </image>        
      
     <video name="md_video">
        <default>./_inc/videos/_default.mp4</default>
        <visible>true</visible>	 	 
        <rotation>0</rotation>             
        <pos>0.524 0.243</pos>
        <origin>0 0</origin>
        <size>0.332 0.320</size>
        <color>FFFFFF</color>
        <zIndex>1</zIndex>		             
      </video>                                                   
   </view> 

   <view name="basic">         
      <image name="background86" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <path>./_inc/msxbasic.png</path>
         <maxSize>1 1</maxSize>
         <zIndex>2</zIndex>           
      </image>                                                          
   </view> 


</theme>
